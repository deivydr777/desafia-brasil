{
  "name": "desafia-brasil-backend",
  "version": "1.0.0",
  "description": "Backend para a plataforma educacional Desafia Brasil - Sistema completo de simulados e ranking para instituições de ensino brasileiras",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:debug": "nodemon --inspect server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "seed": "node utils/seedDatabase.js",
    "seed:questions": "node utils/seedQuestions.js",
    "db:reset": "node utils/resetDatabase.js",
    "db:backup": "node utils/backupDatabase.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "docs": "swagger-jsdoc -d swagger.json src/routes/*.js"
  },
  "keywords": [
    "educacao",
    "enem",
    "vestibular",
    "simulado",
    "ranking",
    "backend",
    "nodejs",
    "express",
    "mongodb",
    "api",
    "rest",
    "jwt",
    "authentication",
    "quiz",
    "educational-platform",
    "brazil",
    "portuguese"
  ],
  "author": {
    "name": "Sua Instituição de Ensino",
    "email": "contato@suainstituicao.edu.br",
    "url": "https://suainstituicao.edu.br"
  },
  "contributors": [
    {
      "name": "Equipe de Desenvolvimento",
      "email": "dev@suainstituicao.edu.br"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sua-instituicao/desafia-brasil.git"
  },
  "bugs": {
    "url": "https://github.com/sua-instituicao/desafia-brasil/issues"
  },
  "homepage": "https://github.com/sua-instituicao/desafia-brasil#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "express-async-errors": "^3.1.1",
    "nodemailer": "^6.9.4",
    "dotenv": "^16.3.1",
    "moment": "^2.29.4",
    "joi": "^17.9.2",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "csv-parser": "^3.0.0",
    "xlsx": "^0.18.5",
    "slugify": "^1.6.6",
    "node-cron": "^3.0.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.3",
    "eslint": "^8.47.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**",
      "!node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "node"
    ],
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "semi": ["error", "always"],
      "quotes": ["error", "single"]
    }
  },
  "nodemonConfig": {
    "ignore": [
      "uploads/*",
      "tests/*",
      "coverage/*",
      "node_modules/*"
    ],
    "ext": "js,json",
    "env": {
      "NODE_ENV": "development"
    }
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "6.0.0"
    }
  }
}
